@{
    ViewData["Title"] = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model ProductViewModel

<h1>Product</h1>

<h2>@Model.Publication.Title</h2>

<div>
    @foreach (string author in Model.Publication.Authors)
    {
        <p>@author</p>
    }
</div>

<p>@Model.Publication.Publisher</p>
<p>@Model.Publication.Imprint</p>
<p>@Model.Publication.Series</p>

<div>
    @foreach (string type in Model.Publication.Types)
    {
        <p>@type</p>
    }
</div>

<p>@Model.Publication.Date</p>
<p>@Model.Publication.ISBN</p>
<p>@Model.Publication.Summary</p>
<p>@Model.Publication.Language</p>
<p>@Model.Publication.Format</p>
<p>@Model.Publication.Identifier</p>
<p>@Model.Publication.CopyTotal</p>
<p>@Model.Publication.PageCount</p>
<p>@Model.Publication.Weight</p>
